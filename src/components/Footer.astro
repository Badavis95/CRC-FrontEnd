---

<footer class="py-12 border-t border-[var(--color-bg-tertiary)]">
  <div class="container-narrow">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <div class="flex items-center gap-6">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target={link.href.startsWith('http') ? '_blank' : undefined}
            rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            class="text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors"
            aria-label={link.name}
          >
            <Fragment set:html={link.icon} />
          </a>
        ))}
      </div>

      <div class="text-center md:text-right">
        <p class="text-[var(--color-text-muted)] text-sm">
          Brian Davis {currentYear}
        </p>
        <p class="text-[var(--color-text-muted)] text-sm flex items-center justify-center md:justify-end gap-2 mt-1">
          <span id="visitor-count" class="text-[var(--color-accent)]">...</span>
          <span>visitors</span>
        </p>
      </div>
    </div>
  </div>
</footer>

<script>
  async function updateVisitorCount() {
    const countElement = document.getElementById('visitor-count');
    if (!countElement) return;

    try {
      const response = await fetch('https://3kgi0zz7gj.execute-api.us-east-1.amazonaws.com/Prod');
      if (response.ok) {
        const data = await response.json();
        countElement.textContent = data.toString();
      } else {
        countElement.textContent = '-';
      }
    } catch (error) {
      console.error('Error fetching visitor count:', error);
      countElement.textContent = '-';
    }
  }

  updateVisitorCount();
</script>
